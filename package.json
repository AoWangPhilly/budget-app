{
  "name": "recipe-app",
  "scripts": {
    "build": "rm -rf out && mkdir out && tsc",
    "build:deploy": "rm -rf out && mkdir out && tsc && (cd frontend && npm run build)",
    "start": "cd out && node server.js",
    "watch": "npm run build && tsc-watch --onSuccess \"npm run start\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --rootDir=src"
  },
  "type": "module",
  "dependencies": {
    "argon2": "^0.30.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^6.10.0",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.4",
    "zod": "^3.20.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "axios": "^1.3.3",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  }
}
